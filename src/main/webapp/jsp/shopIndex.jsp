        var socket = {
            ws: undefined,
            initilized : false,
            path:'/mobile/chat/socket',
            connectIndex:0,
        	init : function(){
        		// 创建一个Socket实例
                var isHttps = ('https:' == window.location.protocol);
                var protocol = 'ws://';
                if (isHttps) {
                    protocol = 'wss://';
                }
                this.ws = new WebSocket(protocol + window.location.host + this.path);

                // 打开Socket
                this.ws.onopen = function(event) {
                    console.log("聊天室连接成功");
                };
                
                this.ws.onclose = function(event) {
                    console.log("断开链接 开始重连.连接次数:" + socket.connectIndex);
                    if(socket.connectIndex < 10){
                    	socket.connectIndex++;
                    	setTimeout(function(){
                    		socket.init();
                    	},10000)
                    }else{
                    	console.log("超出最大连接次数" + socket.connectIndex + "，停止尝试重连,请刷新页面");
                    }
                };
                
                this.ws.onmessage = function(message) {
                    var msg = JSON.parse(message.data);
                    console.log("get masage:");
                    console.log(msg);

                    if(msg.command == 'err'){
                        return
                    }
                    if(msg.command == 'selfInfo'){
                    	var roomId = msg.self.chatRoomId;
                    	$(".l-qr").attr('src','http://qr.liantu.com/api.php?&w=200&text=http://www.luoke30.com/m/chatRoom/' + roomId + '#!/');
                        return;
                    }
                    if(msg.command == 'roomInfo'){
                        return;
                    }
                    if(msg.command == 'prePay'){
                    	 return;
                    }
                    if(!msg.privacy){
                    	if(msg.duration != 0){
                            if(sreenShow){
                                msg.text = replace_em(msg.text);
                                sreenItem.push(msg);
                            	allMsgList.push(msg);
                                return
                            }else{
                                msg.text = replace_em(msg.text);
                                sreenPop(msg);
                            	allMsgList.push(msg);
                            	return
                            }
                        }else{
                            msg.text = replace_em(msg.text);
                        	allMsgList.push(msg);
                        	if(allMsgList.length > 10){
                        		allMsgList.shift();
                        	}
                        }
                    }
                };
        	}
        };
        
        socket.init();
        
        
        
        
     // 霸屏排队
     	var sreenShow = false;
