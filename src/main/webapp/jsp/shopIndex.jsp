        // 霸屏排队
        var sreenShow = false;
        var sreenItem = [];
        function sreenPop(item){
            var sreenShowSeconds = item.duration;
            var seconds = item.duration;

            // 普通霸屏消息展示
            if(seconds != 0){
                sreenShow = true;
             // 特效
             	item.effectCode = "e5";
             
             	item.to = {id:item.sender.id} 
             
                if(item.effectCode != null){
                    if(item.to.id == item.sender.id){
                        item.to = {
                        	nickname:'全场观众',
                            headImg:'/show/resources/img/all.png'
                        }
                        $('.data-to-block').find('.data-gender-w').attr("style",'visibility:hidden');
                        $('.data-to-block').find('.data-gender-m').attr("style",'visibility:hidden');
                    } else{
                    	if(item.to.gender == 'MALE'){
                            $('.data-to-block').find('.data-gender-w').attr("style",'visibility:hidden');
                            $('.data-to-block').find('.data-gender-m').attr("style",'visibility:visibale');
                        }else{
                            $('.data-to-block').find('.data-gender-w').attr("style",'visibility:visibale');
                            $('.data-to-block').find('.data-gender-m').attr("style",'visibility:hidden');
                        }
                    }
                    if(item.sender.gender == 'MALE'){
                    	$('.data-sender-block').find('.data-gender-w').attr("style",'visibility:hidden');
                        $('.data-sender-block').find('.data-gender-m').attr("style",'visibility:visibale');
                    }else{
                        $('.data-sender-block').find('.data-gender-w').attr("style",'visibility:visibale');
                        $('.data-sender-block').find('.data-gender-m').attr("style",'visibility:hidden');
                    }
                    $('.gift-ctn').find('.data-to-head').attr("src",item.to.headImg);
                    $('.gift-ctn').find('.data-to-name').html(item.to.nickname);
                    $('.gift-ctn').find('.data-sender-head').attr("src",item.sender.headImg);
                    $('.gift-ctn').find('.data-sender-name').html(item.sender.nickname);
                    $('.gift-ctn').find('.data-text').html(item.text);
                    
                    
                    if(item.effectCode == 'e1'){ 
                    	$(".data-giftname").html('礼花');
                    	$(".gift-e1").show();
                    }else if(item.effectCode == 'e2'){
                    	$(".data-giftname").html('飞吻');
                    	$(".gift-e2").show();
                    }else if(item.effectCode == 'e3'){
                    	$(".data-giftname").html('钻石');
                    	$(".gift-e3").show();
                    }else if(item.effectCode == 'e4'){
                    	$(".data-giftname").html('钻戒');
                    	$(".gift-e4").show();
                    }else if(item.effectCode == 'e5'){
                    	$(".data-giftname").html('雪花');
                    	snowFl.start();
                    }
                    $('.gift-ctn').show();
                }else{ //普通霸屏消息
                	
                	if(item.pic){  // 判断是否有图片 然后改变的相应的css type 对长宽比不同的图片做出调整
                		$("#getImage").attr('src',item.pic);
                    	var _img = $("#getImage")[0];
                    	_img.onload = function(){
                    		var real_width, real_height;
                            im          = document.createElement('img');
                            im.src      = _img.src,
                            real_width  = im.width,
                            real_height = im.height;
                        	if(real_width > real_height){  //宽图片
                        		$(".bapin-ctn").removeClass("bapin-only-text");
                        		$(".bapin-ctn").addClass("bapin-w");
                                $('.bapin-ctn').find('.data-img').attr('src',item.pic);
                        	}else{  //竖图片
                        		$(".bapin-ctn").removeClass("bapin-w");
                        		$(".bapin-ctn").removeClass("bapin-only-text");
                                $('.bapin-ctn').find('.data-img').attr('src',item.pic);
                        	}
                    	}
                	}else{
                		$(".bapin-ctn").addClass("bapin-only-text");
                		$(".bapin-ctn").removeClass("bapin-w");
                	}
                
                	
                    $('.bapin-ctn').find('.data-head').attr("src",item.sender.headImg);
                    $('.bapin-ctn').find('.data-name').html(item.sender.nickname);
                    $('.bapin-ctn').find('.data-text').html(item.text);
                    $('.bapin-ctn').find('.data-time').html(item.duration);
                    if(item.sender.gender == 'MALE'){
                    	$('.bapin-ctn').find('.data-gender-m').attr("style",'visibility:visible');
                    	$('.bapin-ctn').find('.data-gender-w').attr("style",'visibility:hidden');
                    }else{
                    	$('.bapin-ctn').find('.data-gender-w').attr("style",'visibility:visible');
                    	$('.bapin-ctn').find('.data-gender-m').attr("style",'visibility:hidden');
                    }
                    
                    $(".bapin-ctn").show();
                }



                var fl = '';
                fl = setInterval(function(){
                    sreenShowSeconds--;
					
                    $('.data-time').html(sreenShowSeconds);
                    
                    if(sreenShowSeconds <= 0){
                        $(".bapin-ctn").hide();
                        $('.gift-ctn').hide();
                    	$(".gift-e1").hide();
                    	$(".gift-e2").hide();
                    	$(".gift-e3").hide();
                    	$(".gift-e4").hide();
                    	snowFl.stop();
                        clearTimeout(fl);
                        sreenShow = false;
                        if(sreenItem.length != 0){
                            sreenPop(sreenItem[0]);
                            sreenItem.splice(0,1);
                        }
                        return
                    }
                },1000)

            }
        }


