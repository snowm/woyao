<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true" scan="true" scanPeriod="30 seconds">
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<!-- encoders are by default assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder -->
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS, GMT+8} [%-5level] [%thread] [%class:%line] - %m%n</pattern>

	        <!-- 常用的Pattern变量,大家可打开该pattern进行输出观察 -->
	        <!-- 
	          <pattern>
	              %d{yyyy-MM-dd HH:mm:ss} [%level] - %msg%n
	              Logger: %logger
	              Class: %class
	              File: %file
	              Caller: %caller
	              Line: %line
	              Message: %m
	              Method: %M
	              Relative: %relative
	              Thread: %thread
	              Exception: %ex
	              xException: %xEx
	              nopException: %nopex
	              rException: %rEx
	              Marker: %marker
	              %n
	              
	          </pattern>
	           -->
		</encoder>
		<!-- <timeZone>GMT+8</timeZone> -->
	</appender>


    <logger name="com.woyao">
        <level value="DEBUG"/>
    </logger>
    <logger name="com.snowm">
        <level value="DEBUG"/>
    </logger>
    <logger name="org.mortbay">
        <level value="ERROR"/>
    </logger>
    <logger name="httpclient.wire">
        <level value="WARN"/>
    </logger>
    <logger name="java">
        <level value="WARN"/>
    </logger>
    <logger name="org.springframework">
        <level value="WARN"/>
    </logger>
    <logger name="org.hibernate">
        <level value="WARN"/>
    </logger>

    <!-- General Catch All -->
    <logger name="edu">
        <level value="WARN"/>
    </logger>
    <logger name="net">
        <level value="WARN"/>
    </logger>
    <logger name="io.netty">
        <level value="WARN"/>
    </logger>
    
    <!-- security -->
    <logger name="org.glassfish.jersey.logging.LoggingInterceptor">
        <level value="DEBUG"/>
    </logger>
    <logger name="com.woyao.security.Oauth2SecurityFilter">
    	<level value="DEBUG"/>
    </logger>

    <!-- ======================= -->
    <!-- Setup the Root category -->
    <!-- ======================= -->

    <root>
        <level value="DEBUG"/>
        
		<appender-ref ref="STDOUT" />
    </root>
</configuration>